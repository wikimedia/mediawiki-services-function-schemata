{
	"name": "wikilambda/function-schemata",
	"description": "PHP library for Wikifunction schema validation",
	"license": "MIT",
	"authors": [
		{
			"name": "Cory Massaro"
		}
	],
	"scripts": {
		"lint": "parallel-lint . --exclude vendor",
		"phpcs": "phpcs -p -s",
		"phpunit": "phpunit php/test",
		"phan": "phan -p --allow-polyfill-parser --long-progress-bar",
		"test": [
			"@phpunit",
			"@lint",
			"@phan",
			"@phpcs",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	},
	"require": {
		"opis/json-schema": "^1.0",
		"php": ">=7.2",
		"psr/log": "~1.1.3",
		"sentry/sentry": "0.12.1",
		"swaggest/json-schema": "^0.12.31",
		"symfony/yaml": "^5.2"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "36.0.0",
		"mediawiki/mediawiki-phan-config": "0.10.6",
		"mediawiki/minus-x": "1.1.1",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.3.0",
		"phpunit/phpunit": "^8.5",
		"psy/psysh": "~0.10.4"
	},
	"autoload": {
		"psr-4": {
			"Mediawiki\\Services\\Wikilambda\\FunctionSchemata\\": "php/includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Mediawiki\\Services\\Wikilambda\\FunctionSchemata\\Tests\\": "php/test/"
		}
	},
	"config": {
		"platform": {
			"php": "7.2.22"
		}
	}
}
